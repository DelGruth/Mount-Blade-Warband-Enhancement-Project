<Window x:Class="Mount_and_Blade_Installer.Windows.ModWIndowsInstallUninstall.Realistic_Colors"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Realistic_Colors" Height="300" Width="600" Background="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="95*"/>
            <ColumnDefinition Width="103*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Install" HorizontalAlignment="Left" Height="32" Margin="48,27,0,0" VerticalAlignment="Top" Width="154" Click="Button_Click"/>
        <Button Content="Uninstall" HorizontalAlignment="Left" Height="32" Margin="120.2,27,0,0" VerticalAlignment="Top" Width="154" Click="Button_Click_1" Grid.Column="1"/>
        <Button Content="Back" HorizontalAlignment="Left" Height="32" Margin="230,210,0,0" VerticalAlignment="Top" Width="154" Click="Button_Click_2" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
