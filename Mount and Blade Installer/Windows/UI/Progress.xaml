<Window x:Class="Mount_and_Blade_Installer.Windows.UI.Progress"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Progress" Height="300" Width="562.687" Background="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}" WindowStartupLocation="CenterScreen" Topmost="True" ShowActivated="False">
    <Grid>
        <ProgressBar x:Name="Progressbar" HorizontalAlignment="Left" Height="34" Margin="25,90,0,0" VerticalAlignment="Top" Width="521">
            <ProgressBar.Background>
                <LinearGradientBrush EndPoint="1,0" StartPoint="0,0">
                    <GradientStop Color="#FFBABABA" Offset="0"/>
                    <GradientStop Color="#FFC7C7C7" Offset="0.499"/>
                    <GradientStop Color="#FFBABABA" Offset="1"/>
                </LinearGradientBrush>
            </ProgressBar.Background>
        </ProgressBar>
        <TextBlock HorizontalAlignment="Left" Margin="201,56,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="29" Width="175" FontSize="18"><Run Language="en-za" Text="Download Progress "/></TextBlock>
        <TextBlock x:Name="info" HorizontalAlignment="Left" Height="25" Margin="25,129,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="504" FontSize="18" TextAlignment="Center"><Run Language="en-za" Text="Initializing download... "/></TextBlock>

    </Grid>
</Window>
